    "version": "0.2.0",
    "configurations": [
        {
            "name":             "Python: Current File",
            "type":             "python",
            "request":          "launch",
            "program":          "${file}",
            "stopOnEntry":      true,
            "console":          "integratedTerminal"
        },
        {
            // to run this configuration in this directory, this framework should be part of a sofa project
            "name":             "init study ../..",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}/../..",
            "args":             ["initFoam", "--verbose"],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        }
    ]
}