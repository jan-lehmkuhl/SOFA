{
    // use this configuration to run vs code within your sofa project

    "version": "0.2.0",
    "configurations": [

        {
            // creates a new study
            // needs to remove study before
            "name":             "initStudy",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}",
            "args":             [     "initStudy"
                , "--verbose"
                , "--studyName",          "newStudy"
                , "--studyStructFolder",  "tools/framework/study-structures/openfoam"
            ],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        },


        {
            // creates next case runXXX
            // newStudy has to exist
            "name":             "newCase runXXX",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}/newStudy/run",
            "args": [
                "newCase",
                "--verbose"
            ],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        },


        {
            // create symlinks
            // needs specified cadlink in mesh001/mesh.json
            "name":             "symlinks mesh001",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}/newStudy/mesh/mesh001",
            "args": [
                "symlinks",
                "--verbose"
            ],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        }

    ]
}