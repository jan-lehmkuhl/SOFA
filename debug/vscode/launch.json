{
    // use this configuration to run vs code within your sofa project
    
    "version": "0.2.0",
    "configurations": [
        {
            "name":             "Python: Current File",
            "type":             "python",
            "request":          "launch",
            "program":          "${file}",
            "stopOnEntry":      true,
            "console":          "integratedTerminal"
        },
        {
            "name":             "Python: sofa-tasks.py symlinks run001",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}/newStudy/run/run001",
            "args":             ["symlinks", "--verbose"],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        },
        {
            "name":             "Python: sofa-tasks.py initStudy",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}",
            "args":             [     "initStudy"
                , "--verbose"
                , "--studyName",          "newStudy"
                , "--studyStructFolder",  "tools/framework/study-structures/openfoam"
            ],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        },
        {
            "name":             "Python: sofa-tasks.py initFoam",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}",
            "args":             ["initFoam", "--verbose"],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        }
    ]
}