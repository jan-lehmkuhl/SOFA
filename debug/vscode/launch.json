{
    // use this configuration to run vs code within your sofa project
    
    "version": "0.2.0",
    "configurations": [
        {
            "name":             "Python: Current File",
            "type":             "python",
            "request":          "launch",
            "program":          "${file}",
            "stopOnEntry":      true,
            "console":          "integratedTerminal"
        },
        {
            "name":             "Python: sofa-tasks.py symlinks",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}/FOAMSTUDY1/run/run001",
            "args":             ["symlinks", "--verbose"],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        },
        {
            "name":             "Python: sofa-tasks.py init",
            "type":             "python",
            "request":          "launch",
            "program":          "${workspaceRoot}/tools/framework/scripts/sofa-tasks.py",
            "cwd":              "${workspaceRoot}",
            "args":             ["initFoam", "--verbose"],
            "stopOnEntry":      true,
            "justMyCode":       true,
            "showReturnValue":  true,
            "console":          "integratedTerminal"
        }
    ]
}