{
    "files": [
        {
            "sourcePath": "survey.json",
            "targetPath": "sofa.survey.json",
            "isSymlink": false,
            "onlyAtCaseCreation": true
        },
        {
            "sourcePath": "makefile_case_survey.mk",
            "targetPath": "makefile",
            "isSymlink": true
        },
        {
            "sourcePath": ".gitignore_survey",
            "targetPath": ".gitignore",
            "isSymlink": true
        }
    ],

    "optional-file-bundles": [
    ],


    "upstreamAspects": [
        {
            "upstreamAspect":   "run",
            "caseJsonKey": [    "sofaAspectLinks", "caseLinks" ],
            "useCaseJsonWithoutAspect": false,
            "createDirectSymlink": false,
            "specialLinks": [
                {
                    "upstreamCasePath": "doc/paraview",
                    "targetPath":       "paraview",
                    "separateFiles":    true,
                    "copyFile":         false
                }
            ],
            "isOptional":       true
        }
    ]

}
